<p id="notice"><%= notice %></p>

<h1>Vote your favorit cat!</h1>

<div class="container">
  <div class="row">
    <% @ideas.each do |idea| %>
      <div class="col">
        <%= image_tag idea.picture %>
        <%= idea.description %>
        <%= link_to 'Show', idea %>
        <%= link_to 'Edit', edit_idea_path(idea) %>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Idea', new_idea_path %>
